{
  "scopeName": "bem.support.scss",
  "injectionSelector": "L:source.css.scss",
  "patterns": [{ "include": "#bem_support" }],
  "repository": {
		"bem_support": {
			"patterns": [
        {
          "match": "&__\\S*",
          "name": "entity.other.attribute-name.class.css",
          "captures": {
            "0": { "name": "bem.support.element.scss" }
          }
        },
        {
          "match": "&--\\S*",
          "name": "entity.other.attribute-name.class.css",
          "captures": {
            "0": { "name": "bem.support.modifier.scss" }
          }
        }
      ]
		}
	}
}